@model List<Product>
@{
    ViewData["Title"] = "Products";
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                New Product
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Picture
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th>
                Details
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <th width=5%>
                    @if (obj.Image != null)
                    {
                        <img id="ProductPicture" alt="profile" class="avatar rounded-circle" style="width: 50px;
                           height: 50px;
                           object-fit: cover" src="@obj.Image" />
                    }
                    else
                    {
                        <img id="ProductPicture" alt="profile" class="avatar rounded-circle" src="~/images/team/male_avatar.jpg" />
                    }

                </th>
                <th width=5%>
                    @obj.Name
                </th>
                <th width=5%>
                    @obj.Price
                </th>
                <th width=10%>
                    @obj.Description
                </th>
                <th width=5%>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-2">
                           Details
                        </a>
                    </div>
                </th>
                <th width=5%>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-2">
                            Edit
                        </a>
                    </div>
                </th>
                <th width=5%>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-2">
                            Delete
                        </a>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>